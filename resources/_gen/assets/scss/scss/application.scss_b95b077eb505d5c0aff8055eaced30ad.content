x;min-height:100vh;min-width:100vw}.site-content__section{display:none!important}.site-content__section.active{display:flex!important}.home{position:relative;display:flex;justify-content:space-between;padding:4rem;flex:1}.home__content-container{flex:1;display:flex;flex-direction:column;gap:1rem;padding:1.5rem 0 2rem;text-align:center;font-family:poppins,sans-serif}.home__content-container .home__titles{display:flex;flex-direction:column;gap:.75rem}.home__content-container .special-title{font-size:10rem;line-height:.9em;font-family:timegoing,sans-serif;font-weight:400;transform:rotate(355deg);text-shadow:0 -.5625rem 0 #f5f3f1,.625rem 0 0 #f5f3f1,0 .625rem 0 #f5f3f1,-.3125rem 0 0 #f5f3f1}.home__content-container .special-subtitle{z-index:100;position:relative;font-size:4rem;font-weight:600;text-transform:uppercase;line-height:.9em}.home__content-container .special-subtitle::before{z-index:-1;content:"";position:absolute;top:0;left:0;width:100%;height:100%;background-color:#f5f3f1}.home__content-container .home__content{display:flex;flex-direction:column;flex:1}.home__content-container .job-details span{font-weight:300;font-size:1.25rem;text-transform:uppercase}.home__content-container .name{display:flex;flex-direction:column;margin-top:auto}.home__content-container .name .firstname,.home__content-container .name .lastname{text-transform:uppercase}.home__content-container .name .firstname{font-size:1.125rem;font-weight:500}.home__content-container .name .lastname{font-size:1.5rem;font-weight:800}.home__side{display:flex;flex-direction:column;justify-content:space-between;position:fixed;left:0;top:0;bottom:0;width:fit-content;padding:4rem 0;background-color:#f5f3f1}.home__side .bottom{writing-mode:vertical-rl}.home__side .bottom .last-job{transform:rotate(180deg);display:flex;flex-direction:column;align-items:center;gap:.75rem}.home__side .bottom .last-job p{font-size:.875rem;text-transform:uppercase}